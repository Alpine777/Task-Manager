<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId"  controller="MembersCardController" >
    <aura:method name="sortbyNameMethod" action="{!c.sortbyName}" access="public"/>
    <aura:method name="sortbyProgressMethod" action="{!c.sortbyProgress}" access="public"/>
    <aura:handler name="init" value="{!this }" action="{!c.init }"/>
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="asc" type="Boolean" default= "true" />
    <aura:attribute name="ascP" type="Boolean" default= "true" />
    <aura:attribute name="userValueWrapper" type="List[]"/>
    
    <lightning:layout multipleRows="true" class="slds-grid">  
        <aura:iteration items="{!v.userValueWrapper}" var="wrapper">
            <!--card-->
            <lightning:layoutItem padding="around-small" size="4" class="slds-col"> 
                <lightning:card class="slds-card_boundary">
                    <lightning:layout verticalAlign="center" horizontalAlign="center">
                        <lightning:layoutItem>
                            <lightning:avatar src="{!$Resource.Avatar+'/images/'+ wrapper.userName +'.png'}" class= "slds-card_boundary"></lightning:avatar>   
                        </lightning:layoutItem>
                    </lightning:layout>
                    <lightning:layout horizontalAlign="center" >
                        <lightning:layoutItem padding="around-small">
                            <p>{!wrapper.fullName}</p>       
                        </lightning:layoutItem>
                    </lightning:layout>
                    <lightning:layout horizontalAlign="center">
                        <lightning:layoutItem>
                            <lightning:progressBar value="{!wrapper.progress}"/>
                            <ul>
                                <li>Tasks assigned : {!wrapper.countAllTask}</li>
                                <li>Tasks completed : {!wrapper.countTask}</li>
                            </ul>
                        </lightning:layoutItem>
                    </lightning:layout>
                </lightning:card>  
            </lightning:layoutItem>
        </aura:iteration>
    </lightning:layout>
</aura:component>