<aura:component implements= "flexipage:availableForAllPageTypes,force:hasRecordId"  controller="Task_TableController" >
    <aura:attribute name="mydata" type="Object"/>
    <aura:attribute name="mycolumns" type="List"/>
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="rawData" type="Object" />
    <aura:attribute name="sortedBy" type="String" default="Name"/>
    <aura:attribute name="sortedDirection" type="string" default="asc" /> 
    <aura:method name="reInit" action="{!c.init}" access="public"/>
    <aura:handler name="init" value="{!this }" action="{!c.init }"/>
    <lightning:datatable aria-label="Project"
                         class="{slds-border_top}"
                         data="{! v.mydata }" 
                         columns="{! v.mycolumns }" 
                         keyField="Id"
                         hideCheckboxColumn="true"
                         onsort="{!c.updateSorting}"
                         sortedBy="{!v.sortedBy}"
                         sortedDirection="{!v.sortedDirection}" 
                         onrowaction="{!c.handleRowAction}"/>
</aura:component>