<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Due_date</fullName>
        <ccEmails>tdkrbigya2@gmail.com</ccEmails>
        <description>Due date</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Due_date</template>
    </alerts>
    <fieldUpdates>
        <fullName>Set_priority_high</fullName>
        <field>Priority__c</field>
        <literalValue>High</literalValue>
        <name>Set priority high</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Set_priority_low</fullName>
        <field>Priority__c</field>
        <literalValue>Low</literalValue>
        <name>Set priority low</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Set_priority_normal</fullName>
        <field>Priority__c</field>
        <literalValue>Normal</literalValue>
        <name>Set priority normal</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Set alert</fullName>
        <active>true</active>
        <formula>ISPICKVAL( Priority__c , &apos;High&apos;)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Due_date</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Personal_Task__c.Due_Date__c</offsetFromField>
            <timeLength>-1</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Set priority high</fullName>
        <actions>
            <name>Set_priority_high</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>Due_Date__c  &lt;  TODAY()  + 8</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Set priority low</fullName>
        <actions>
            <name>Set_priority_low</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>Due_Date__c - TODAY()  &gt; 14</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Set priority normal</fullName>
        <actions>
            <name>Set_priority_normal</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND(15&gt; Due_Date__c  -  TODAY(),Due_Date__c  -  TODAY()  &gt; 7 )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
